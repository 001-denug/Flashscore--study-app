{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/app",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@controllers/*": ["controllers/*"],
      "@api/*": ["api/*"],
      "@services/*": ["services/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
      "@shared/types/*": ["../../../../packages/shared/src/libs/types/*"],
      "@shared/utils/*": ["../../../../packages/shared/src/libs/utils/*"],
      "@shared/models/*": ["../../../../packages/shared/src/libs/models/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}