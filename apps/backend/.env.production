# =================================================================
# MAGAJICO ENHANCED PREDICTION SYSTEM - PRODUCTION CONFIGURATION
# =================================================================

# =================================================================
# SERVER CONFIGURATION
# =================================================================
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# Frontend URLs (for CORS) - UPDATE THESE WITH YOUR ACTUAL DOMAINS
FRONTEND_URL=https://your-frontend-url.vercel.app
REPLIT_DEV_DOMAIN=your-replit-domain.replit.dev

# Additional allowed origins for production
ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,https://www.your-domain.com,https://admin.your-domain.com

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Primary MongoDB Connection - UPDATE WITH YOUR ACTUAL PRODUCTION DB
MONGODB_URI=mongodb://your-production-db

# Alternative MongoDB Atlas Connection (Recommended for production)
# MONGODB_URI=mongodb+srv://magajico_prod:YOUR_SECURE_PASSWORD@cluster0.mongodb.net/magajico_prod?retryWrites=true&w=majority

# X.509 Certificate Authentication (Enterprise - if using Atlas X.509)
# MONGODB_X509_URI=mongodb+srv://clustermagaji.deweqyx.mongodb.net/?authSource=%24external&authMechanism=MONGODB-X509&retryWrites=true&w=majority&appName=ClusterMagaji
# MONGODB_CERT_PATH=./certs/mongodb-prod-cert.pem

# Production Database Options
DB_MAX_POOL_SIZE=20
DB_SERVER_SELECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=60000

# Legacy Database URL (if needed for compatibility)
DATABASE_URL=your-production-database-url

# =================================================================
# SECURITY CONFIGURATION - CRITICAL: UPDATE THESE VALUES
# =================================================================

# JWT Configuration - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_256_BIT_SECRET_KEY_FOR_PRODUCTION_JWT_TOKENS_2024
JWT_EXPIRE=24h

# Encryption Key - MUST BE EXACTLY 32 CHARACTERS
ENCRYPTION_KEY=ProductionMagaji2024Secure32Bit

# Admin Credentials - UPDATE THESE
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Production Rate Limiting (stricter than development)
RATE_LIMIT_MAX=50
RATE_LIMIT_WINDOW=60000

# Additional Security Headers
TRUST_PROXY=true
SECURE_COOKIES=true
SAME_SITE=strict

# =================================================================
# MACHINE LEARNING CONFIGURATION
# =================================================================

# Production ML Model Settings
ML_MODEL_VERSION=2.0.0
ML_TIMEOUT=30000
ML_PYTHON_PATH=/usr/bin/python3

# Production Model Performance Thresholds
CONFIDENCE_THRESHOLD=0.75
EDGE_THRESHOLD=0.12
RISK_THRESHOLD=0.25

# Enhanced Filter Settings (Production - More Conservative)
FILTER_CONFIDENCE_MIN=0.75
FILTER_MARKET_VALIDATION_MIN=0.70
FILTER_SHARP_MONEY_MIN=0.65
FILTER_VALUE_OPPORTUNITY_MIN=0.12
FILTER_RISK_MAX=0.25
FILTER_LIQUIDITY_MIN=0.60
FILTER_MARKET_EFFICIENCY_MAX=88

# =================================================================
# MARKET INTELLIGENCE CONFIGURATION
# =================================================================

# Kalshi-Style Market Intelligence (Production Settings)
KALSHI_MARKET_DEPTH_WEIGHT=0.18
KALSHI_LIQUIDITY_WEIGHT=0.12
KALSHI_NEWS_SENTIMENT_WEIGHT=0.08
KALSHI_CONFIDENCE_THRESHOLD=0.70

# Pinnacle-Style Sharp Odds (Production Settings)
PINNACLE_MARGIN=0.018
PINNACLE_SHARP_THRESHOLD=0.78
PINNACLE_LINE_MOVEMENT_WEIGHT=0.10

# Warren Buffett Value Analysis (Production Settings)
BUFFETT_INTRINSIC_VALUE_MIN=0.82
BUFFETT_MARGIN_OF_SAFETY_MIN=0.18
BUFFETT_BUSINESS_QUALITY_MIN=0.88

# =================================================================
# EXTERNAL API KEYS - UPDATE WITH YOUR ACTUAL KEYS
# =================================================================

# Sports Data APIs
SPORTS_API_KEY=your-sports-api-key
STAKE_API_KEY=your_stake_api_key_here
BETTODAY_API_KEY=your_bettoday_api_key_here
FLASHSCORE_API_KEY=your_flashscore_api_key_here
FOOTBALL_API_KEY=your_football_data_api_key_here

# News & Sentiment Analysis
NEWS_API_KEY=your_news_api_key_here
SENTIMENT_API_KEY=your_sentiment_analysis_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_api_bearer_token_here

# Weather Data (for advanced predictions)
WEATHER_API_KEY=your_openweathermap_api_key_here

# Financial Data
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here
COINBASE_API_KEY=your_coinbase_api_key_here

# =================================================================
# SCRAPING CONFIGURATION (Production)
# =================================================================

# Scraping Intervals (Production - Less Aggressive)
SCRAPE_INTERVAL_ODDS=45
SCRAPE_INTERVAL_RESULTS=90
SCRAPE_INTERVAL_NEWS=180
SCRAPE_INTERVAL_WEATHER=240

# Production Scraping Rate Limits
SCRAPE_DELAY_MS=2000
SCRAPE_MAX_RETRIES=2
SCRAPE_TIMEOUT=45000
SCRAPE_CONCURRENT_LIMIT=3

# Production User Agents
USER_AGENT="MagajiCo-Bot/2.0 (+https://your-domain.com/bot)"

# =================================================================
# CACHING CONFIGURATION (Production)
# =================================================================

# Redis Configuration (Recommended for Production)
REDIS_URL=redis://your-redis-server:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
CACHE_TTL=600

# Production Cache Settings
MEMORY_CACHE_MAX_SIZE=5000
MEMORY_CACHE_TTL=900
ENABLE_DISTRIBUTED_CACHE=true

# =================================================================
# LOGGING CONFIGURATION (Production)
# =================================================================

# Production Log Levels
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/magajico/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Error Reporting
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your_sentry_dsn_here
BUGSNAG_API_KEY=your_bugsnag_api_key_here

# =================================================================
# EMAIL/NOTIFICATION CONFIGURATION
# =================================================================

# Production SMTP Settings
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# Production Email Settings
FROM_EMAIL=noreply@your-domain.com
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# Production Notification Settings
ENABLE_EMAIL_ALERTS=true
ENABLE_DOMINATION_ALERTS=true
ENABLE_RISK_WARNINGS=true
ENABLE_VALUE_BET_ALERTS=true
ENABLE_SYSTEM_ALERTS=true

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#magajico-alerts

# =================================================================
# CEO ANALYSIS CONFIGURATION (Production)
# =================================================================

# Strategic Framework Weights (Production Tuned)
ZUCKERBERG_META_SCALING=0.92
ZUCKERBERG_PLATFORM_FOCUS=0.88
ZUCKERBERG_DATA_INTELLIGENCE=0.95
ZUCKERBERG_ACQUISITION_STRATEGY=0.85

BUFFETT_LONG_TERM_VISION=true
BUFFETT_VALUE_FOCUS=0.90
BUFFETT_MARGIN_SAFETY_REQUIRED=0.18
BUFFETT_QUALITY_SCORE_MIN=0.85

# Production Decision Thresholds (More Conservative)
DOMINATION_THRESHOLD_FILTERS=6
DOMINATION_THRESHOLD_CONFIDENCE=0.88
DOMINATION_THRESHOLD_EDGE=0.22

EXECUTE_THRESHOLD_FILTERS=5
EXECUTE_THRESHOLD_CONFIDENCE=0.78

MONITOR_THRESHOLD_FILTERS=4

# =================================================================
# PRODUCTION FEATURE FLAGS
# =================================================================

# Core Features (All Enabled for Production)
ENABLE_ENHANCED_PREDICTIONS=true
ENABLE_CEO_ANALYSIS=true
ENABLE_MARKET_INTELLIGENCE=true
ENABLE_KALSHI_INTEGRATION=true
ENABLE_PINNACLE_ANALYSIS=true
ENABLE_BUFFETT_ANALYSIS=true
ENABLE_ZUCKERBERG_SCALING=true

# Advanced Features (Enable as needed)
ENABLE_NEWS_SENTIMENT=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_INJURY_TRACKING=false
ENABLE_SOCIAL_MEDIA_SENTIMENT=false

# Legacy Support (Disable in production for performance)
ENABLE_V1_API=false
ENABLE_LEGACY_PREDICTIONS=false
ENABLE_TEST_ROUTES=false

# =================================================================
# MONITORING & ANALYTICS (Production)
# =================================================================

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENDPOINT=/api/health

# Analytics (Production)
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=500
ANALYTICS_FLUSH_INTERVAL=300000
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=2000
MEMORY_USAGE_THRESHOLD=0.85
CPU_USAGE_THRESHOLD=0.80

# APM Integration
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key

# =================================================================
# BACKUP & RECOVERY (Production)
# =================================================================

# Database Backup (Critical for Production)
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=43200000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/magajico
BACKUP_S3_BUCKET=magajico-backups-prod

# Data Export
ENABLE_DATA_EXPORT=true
EXPORT_INTERVAL=604800000
EXPORT_FORMAT=json
EXPORT_S3_BUCKET=magajico-exports-prod

# =================================================================
# SSL/TLS CONFIGURATION
# =================================================================

# SSL Settings (if handling SSL at app level)
SSL_CERT_PATH=/etc/ssl/certs/magajico.crt
SSL_KEY_PATH=/etc/ssl/private/magajico.key
FORCE_HTTPS=true

# =================================================================
# PERFORMANCE OPTIMIZATION (Production)
# =================================================================

# Worker Processes
WORKER_PROCESSES=4
MAX_CONNECTIONS_PER_WORKER=1000

# Request Limits
MAX_REQUEST_SIZE=10mb
TIMEOUT_REQUEST=30000
TIMEOUT_KEEP_ALIVE=5000

# Memory Limits
NODE_MAX_OLD_SPACE_SIZE=4096
MAX_HEAP_SIZE=3584

# =================================================================
# CLOUD PROVIDER SPECIFIC (Update based on your deployment)
# =================================================================

# AWS Settings (if deploying on AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=magajico-prod-assets

# Google Cloud Settings (if deploying on GCP)
GOOGLE_CLOUD_PROJECT_ID=magajico-prod
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Settings (if deploying on Azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# =================================================================
# DOCKER CONFIGURATION (if using containerization)
# =================================================================
DOCKER_ENV=production
CONTAINER_NAME=magajico-prod
DOCKER_NETWORK=magajico-network

