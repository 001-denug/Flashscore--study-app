{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist/src",
    "baseUrl": "src",
    "paths": {
      "@bakcomponents/*": ["components/*"],
      "@baktypes/*": ["types/*"],
      "@bakcontrollers/*": ["controllers/*"],
      "@bakroutes/*": ["routes/*"],
      "@bakservices/*": ["services/*"],
      "@bakstyles/*": ["styles/*"],
      "@bakconfig/*": ["config/*"],

      "@shared/types/*": ["../../packages/shared/src/libs/types/*"],
      "@shared/utils/*": ["../../packages/shared/src/libs/utils/*"],
      "@shared/models/*": ["../../packages/shared/src/libs/models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}