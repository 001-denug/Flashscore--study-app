{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@bcomponents/*": ["components/*"],
      "@bktypes/*": ["types/*"],
      "@bcontrollers/*": ["controllers/*"],
      "@broutes/*": ["routes/*"],
      "@bservices/*": ["services/*"],
      "@bstyles/*": ["styles/*"],
      "@bconfig/*": ["config/*"],
      "@shared/types/*": ["../../../packages/shared/src/libs/types/*"],
      "@shared/utils/*": ["../../../packages/shared/src/libs/utils/*"],
      "@shared/models/*": ["../../../packages/shared/src/libs/models/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}