
# Database Configuration (Set these in Replit Secrets)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sports_central
DATABASE_URL=postgresql://username:password@host:port/database

# API Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.replit.app

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=securePassword123!

# Sports API Keys
SPORTS_API_KEY=your_sports_api_key_here

# Vercel Deployment (if needed)
VERCEL_URL=your-vercel-deployment-url
