# .env - Enhanced MagajiCo Environment Configuration

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Primary MongoDB Connection (choose one)
MONGODB_URI=mongodb://127.0.0.1:27017/magajico

# MongoDB Atlas (production/cloud option)
# MONGODB_URI=mongodb+srv://username:password@clustermagaji.deweqyx.mongodb.net/magajico?retryWrites=true&w=majority

# X.509 Certificate Authentication (enterprise option)
# MONGODB_X509_URI=mongodb+srv://clustermagaji.deweqyx.mongodb.net/?authSource=%24external&authMechanism=MONGODB-X509&retryWrites=true&w=majority&appName=ClusterMagaji
# MONGODB_CERT_PATH=./certs/mongodb-cert.pem

# Legacy support (remove if not needed)
MONGO_URI=mongodb://localhost:27017/magajico

# ===========================================
# SERVER CONFIGURATION  
# ===========================================

PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://flashscore-study-app.vercel.app

# ===========================================
# ENHANCED ML & PREDICTION SYSTEM
# ===========================================

# Python ML Model Configuration
PYTHON_EXECUTABLE=python3
ML_MODEL_TIMEOUT=30000
ML_MODEL_PATH=./ml/enhanced_prediction.py

# Prediction System Settings
PREDICTION_CONFIDENCE_THRESHOLD=0.70
VALUE_BET_EDGE_THRESHOLD=0.10
RISK_TOLERANCE_LEVEL=0.30

# MagajiCo 7(1) Filter Thresholds
FILTER_CONFIDENCE_MIN=70
FILTER_MARKET_VALIDATION_MIN=65
FILTER_SHARP_MONEY_MIN=60
FILTER_VALUE_OPPORTUNITY_MIN=10
FILTER_RISK_MAX=30
FILTER_LIQUIDITY_MIN=50
FILTER_INFO_EDGE_MIN=15

# ===========================================
# MARKET INTELLIGENCE APIS
# ===========================================

# News Sentiment Analysis
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# Sports Data APIs
RAPID_API_KEY=your_rapidapi_key_here
FOOTBALL_API_KEY=your_football_api_key_here

# Betting/Odds APIs (for market intelligence)
PINNACLE_API_KEY=your_pinnacle_api_key_here
BETFAIR_API_KEY=your_betfair_api_key_here
STAKE_API_KEY=your_stake_api_key_here
BETTODAY_API_KEY=your_bettoday_api_key_here

# Market Data Providers
KALSHI_API_KEY=your_kalshi_api_key_here
POLYMARKET_API_KEY=your_polymarket_api_key_here

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================

# JWT Configuration
JWT_SECRET=magajico_super_secure_jwt_secret_key_2024_v2_enhanced
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Encryption
ENCRYPTION_KEY=magajico_32_character_secret_key_01
HASH_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX_REQUESTS_DEV=1000
RATE_LIMIT_MAX_REQUESTS_PROD=100

# CORS Security
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# ===========================================
# CACHING & PERFORMANCE
# ===========================================

# Redis (for caching predictions and market data)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (Time To Live) in seconds
CACHE_PREDICTIONS_TTL=300
CACHE_MARKET_DATA_TTL=60
CACHE_NEWS_TTL=1800

# ===========================================
# SCRAPING & DATA COLLECTION
# ===========================================

# Scraping intervals (minutes)
SCRAPE_INTERVAL_ODDS=30
SCRAPE_INTERVAL_RESULTS=60
SCRAPE_INTERVAL_NEWS=120
SCRAPE_INTERVAL_MARKET_DATA=15

# Scraping limits (requests per hour)
SCRAPE_RATE_LIMIT=1000
SCRAPE_CONCURRENT_REQUESTS=5

# User agents for scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Log levels: error, warn, info, debug
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/magajico.log
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5

# Monitoring & Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# ===========================================
# EMAIL & NOTIFICATIONS
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Templates
FROM_EMAIL=noreply@magajico.com
FROM_NAME=MagajiCo Enhanced Predictions

# ===========================================
# BUSINESS INTELLIGENCE
# ===========================================

# Warren Buffett Value Investing Thresholds
BUFFETT_INTRINSIC_VALUE_MIN=0.80
BUFFETT_MARGIN_SAFETY_MIN=0.15
BUFFETT_QUALITY_SCORE_MIN=0.85

# Zuckerberg Meta Strategy Settings
ZUCKERBERG_PLATFORM_SCALING=0.95
ZUCKERBERG_DATA_INTELLIGENCE=0.90
ZUCKERBERG_ACQUISITION_STRATEGY=0.80

# Pinnacle Sharp Money Settings
PINNACLE_MARGIN=0.02
PINNACLE_SHARP_THRESHOLD=0.75
PINNACLE_LINE_MOVEMENT_WEIGHT=0.08

# Kalshi Market Intelligence
KALSHI_CONFIDENCE_THRESHOLD=0.65
KALSHI_VOLUME_WEIGHT=0.15
KALSHI_NEWS_SENTIMENT_WEIGHT=0.10

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Development flags
ENABLE_DEV_ROUTES=true
ENABLE_DEBUG_LOGS=true
SKIP_AUTH_IN_DEV=true

# Testing
TEST_DATABASE_URL=mongodb://127.0.0.1:27017/magajico_test
RUN_INTEGRATION_TESTS=false

# Mock API responses (for testing without external APIs)
USE_MOCK_APIS=false
MOCK_PREDICTION_CONFIDENCE=0.75

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enhanced Features
ENABLE_ENHANCED_PREDICTIONS=true
ENABLE_CEO_ANALYSIS=true
ENABLE_MARKET_INTELLIGENCE=true
ENABLE_SHARP_MONEY_DETECTION=true
ENABLE_VALUE_BET_ALERTS=true
ENABLE_RISK_WARNINGS=true

# Experimental Features
ENABLE_AI_SENTIMENT_ANALYSIS=false
ENABLE_BLOCKCHAIN_INTEGRATION=false
ENABLE_QUANTUM_PREDICTIONS=false

# ===========================================
# THIRD PARTY INTEGRATIONS
# ===========================================

# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Payment Processing (for premium features)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# Build Configuration
BUILD_OUTPUT_DIR=dist
BUILD_TARGET=node18

# Docker Configuration
DOCKER_IMAGE_TAG=magajico:latest
DOCKER_REGISTRY=your_registry_url

# Cloud Provider Settings (AWS/GCP/Azure)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CDN Configuration
CDN_URL=https://cdn.magajico.com
STATIC_ASSETS_URL=https://assets.magajico.com

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3