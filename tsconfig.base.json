{
  "compilerOptions": {
    
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],

    
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

   
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",

    
    "composite": true
  }
}