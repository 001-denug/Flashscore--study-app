{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@shared/types/*": ["packages/shared/src/libs/types/*"],
      "@shared/utils/*": ["packages/shared/src/libs/utils/*"],
      "@shared/models/*": ["packages/shared/src/libs/models/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}