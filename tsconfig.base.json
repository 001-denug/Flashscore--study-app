{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Paths and Outputs */
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",

    /* Incremental Builds */
    "composite": true
  }
}