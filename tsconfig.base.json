{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",                      
    "moduleResolution": "node",
    "lib": ["ES2020"],                       
    "types": ["node"],                       
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "rootDir": ".",                          
    "outDir": "dist",
    "baseUrl": ".",                          
    "composite": true
  }
}