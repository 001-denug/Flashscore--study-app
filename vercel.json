{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production",
    "NEXTAUTH_URL": "https://your-vercel-app-name.vercel.app",
    "NEXT_PUBLIC_BACKEND_URL": "https://flashstudy-ri0g.onrender.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "src/app/api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/backend/(.*)",
      "destination": "https://flashstudy-ri0g.onrender.com/$1"
    }
  ]
}