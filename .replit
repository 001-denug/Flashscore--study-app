modules = ["nodejs-20"]
run = "cd apps/frontend && npm run dev"

[nix]
channel = "stable-25_05"
packages = ["miktex", "nix-output-monitor"]

[deployment]
run = ["sh", "-c", "cd apps/backend && npm start & cd apps/frontend && npm start"]
build = ["sh", "-c", "cd apps/frontend && npm install && npm run build"]

[workflows]
runButton = "Frontend Development Clean"

[[workflows.workflow]]
name = "Start Sports API"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node --esm Sports-api.ts"

[[workflows.workflow]]
name = "Full Stack Next.js"
author = 46296136
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install tsx --save-dev && npx tsx server.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Full Stack Monorepo"
author = 46296136
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Backend Only"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow]]
name = "Frontend Only"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Frontend Port 3001"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Full Stack Monorepo Fixed"
author = 46296136
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && PORT=3001 npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:frontend"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:backend"
waitForPort = 8000

[[workflows.workflow]]
name = "Full Stack NPM"
author = 46296136
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "Frontend Only App"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm install && npm run dev"

[[workflows.workflow]]
name = "Frontend Only App Clean"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm install && npm run dev"

[[workflows.workflow]]
name = "Production Frontend"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm ci --only=production && npm run build && npm run start"

[[workflows.workflow]]
name = "Frontend Development Clean"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && rm -rf node_modules .next && npm install && npm run dev"

[[workflows.workflow]]
name = "Frontend Development Clean"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && rm -rf node_modules .next && npm install && npm run dev"

[[workflows.workflow]]
name = "Test Backend API"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm install && npm run dev"

[[workflows.workflow]]
name = "Health Check"
author = 46296136
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node health-check.js"

