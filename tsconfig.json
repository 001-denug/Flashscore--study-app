//tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // ðŸ‘‡ important for src/ migration
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    {
  "files": [],
  "references": [
    { "path": "apps/frontend" },
    { "path": "apps/backend" },
    { "path": "packages" }
  ]
}
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
  ]
}